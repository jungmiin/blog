---
const { frontmatter } = Astro.props;
import Layout from "./Layout.astro";

const formattedDate = new Date(frontmatter.pubDate)
  .toISOString()
  .slice(0, 10)
  .replace(/-/g, ".");
---
<Layout>
    <main class="max-w-6xl mx-auto px-6 py-8 md:px-12 lg:px-16 md:py-12 pb-24 md:pb-20" style="padding-top: 80px">
      <!-- Back Button -->
      <a href="/blog.html" class="flex items-center gap-2 text-[#000000] dark:text-white transition-all mb-12">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        <span>Back to Blog</span>
      </a>

      <!-- Article Header -->
      <header class="mb-16 md:mb-20 max-w-3xl">
        <div class="flex items-center gap-4 mb-6">
          <span class="text-xs uppercase tracking-wider text-[#000000] dark:text-white opacity-40">{frontmatter.category}</span>
          <span class="text-[#000000] dark:text-white opacity-20">Â·</span>
          <time class="text-[#000000] dark:text-white opacity-40 tabular-nums text-sm">{formattedDate}</time>
        </div>
        <h1 class="text-[clamp(2rem,6vw,3.5rem)] leading-[0.95] tracking-tight mb-8 text-[#000000] dark:text-white">
          {frontmatter.title}
        </h1>
      </header>
      <article class="prose prose-neutral dark:prose-invert max-w-none mx-auto px-4">
      <slot />
      </article>
    </main>
</Layout>