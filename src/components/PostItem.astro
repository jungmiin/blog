---
const { title, pubDate, category, description, url, index } = Astro.props;

const formattedDate = new Date(pubDate)
  .toISOString()
  .slice(0, 10)
  .replace(/-/g, ".");
---

<article class="group cursor-pointer py-4 md:py-5 hover:bg-black/[0.02] dark:hover:bg-white/[0.02] transition-colors px-4 md:px-6 -mx-4 md:-mx-6">
    <a href={url} class="block">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-6 md:gap-8">
        <!-- Number & Category -->
        <div class="md:col-span-2 flex flex-row md:flex-col gap-4 md:gap-2 items-center md:items-start">
        <div class="text-[#000000] dark:text-white opacity-20 tabular-nums text-sm">{index}</div>
        <div>
            <span class="text-xs uppercase tracking-wider text-[#000000] dark:text-white opacity-40">{category}</span>
        </div>
        </div>

        <!-- Title & Summary -->
        <div class="md:col-span-7 space-y-3">
        <h2 class="text-[#000000] dark:text-white transition-colors leading-tight">
            {title}
        </h2>
        <p class="text-[#000000] dark:text-white opacity-50 leading-relaxed text-[0.95em]">
            {description}
        </p>
        </div>

        <!-- Date -->
        <div class="md:col-span-3 flex md:justify-end items-start">
        <time class="text-[#000000] dark:text-white opacity-40 tabular-nums text-sm">{formattedDate}</time>
        </div>
    </div>
    </a>
</article>